{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "plugins": ["@prettier/plugin-xml"],
  "overrides": [
    {
      "files": ["*.xml"],
      "options": {
        "printWidth": 70,
        "tabWidth": 3,
        "xmlWhitespaceSensitivity": "strict",
        "xmlSelfClosingSpace": true,
        "xmlSortAttributesByKey": false
      }
    }
  ]
}
